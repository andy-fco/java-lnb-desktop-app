package GUI;

import java.awt.Color;
 import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.JPanel;
import javax.swing.JTextField;
import javax.swing.border.EmptyBorder;

import BLL.Admin;
 import DLL.DLLAdmin;

public class EditarAdmin extends JFrame {

	private static final long serialVersionUID = 1L;
	private JPanel contentPane;

	/**
	 * Launch the application.
	 */
	
			public void run(Admin editar, Admin user) {
				try {
					EditarAdmin frame = new EditarAdmin(editar, user);
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		
	

	/**
	 * Create the frame.
	 */
	public EditarAdmin(Admin editar, Admin user) {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 405, 419);
		setLocationRelativeTo(null);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));

		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		JLabel lblNewLabel = new JLabel("Editar Administrador");
		lblNewLabel.setFont(new Font("Tahoma", Font.PLAIN, 32));
		lblNewLabel.setBounds(74, 30, 243, 39);
		contentPane.add(lblNewLabel);
		
		JTextField inpNombre = new JTextField();
		inpNombre.setBounds(47, 103, 306, 24);
		inpNombre.setText(editar.getNombre());
		contentPane.add(inpNombre);
		inpNombre.setColumns(10);
		
		JLabel lblNewLabel_1 = new JLabel("Nombre: ");
		lblNewLabel_1.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblNewLabel_1.setBounds(47, 79, 134, 24);
		contentPane.add(lblNewLabel_1);
		
		JTextField inpApellido = new JTextField();
		inpApellido.setColumns(10);
		inpApellido.setBounds(47, 155, 306, 24);
		inpApellido.setText(editar.getApellido());
		contentPane.add(inpApellido);
		
		JLabel lblApellido = new JLabel("Apellido:");
		lblApellido.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblApellido.setBounds(47, 131, 134, 24);
		contentPane.add(lblApellido);
		
		JTextField inpID = new JTextField();
		inpID.setColumns(10);
		inpID.setBounds(47, 210, 306, 24);
		inpID.setText(editar.getId());
		contentPane.add(inpID);
		
		JLabel lblID = new JLabel("ID: ");
		lblID.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblID.setBounds(47, 186, 134, 24);
		contentPane.add(lblID);
		
		JTextField inpPass = new JTextField();
		inpPass.setColumns(10);
		inpPass.setBounds(47, 264, 306, 24);
		inpPass.setText(editar.desencriptar(editar.getPass()));
		contentPane.add(inpPass);
		
		JLabel lblPass = new JLabel("Contraseña:");
		lblPass.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblPass.setBounds(47, 240, 134, 24);
		contentPane.add(lblPass);
		
		JLabel lblVacio = new JLabel("");
		lblVacio.setForeground(Color.RED);
		lblVacio.setFont(new Font("Tahoma", Font.PLAIN, 15));
		lblVacio.setBounds(47, 287, 236, 32);
		contentPane.add(lblVacio);
		
		JButton btnEditar = new JButton("Editar");
		btnEditar.setFont(new Font("Tahoma", Font.PLAIN, 18));
		btnEditar.setBounds(195, 318, 158, 32);
		btnEditar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
				String nombre = inpNombre.getText();
				String apellido = inpApellido.getText();
				String id = inpID.getText();
				String pass = inpPass.getText();
				
				String id_viejo = editar.getId();
				
				if (nombre.isEmpty()||apellido.isEmpty()||id.isEmpty()||pass.isEmpty()) {
					lblVacio.setText("No se permiten campos vacíos");
				} else {
					Admin editado = new Admin(nombre, apellido, id, pass);
					if (DLLAdmin.editarAdmin(editado, id_viejo)) {
						JOptionPane.showMessageDialog(null, "Administrador editado con éxito.");
						GestionUsers panelGestion = new GestionUsers(user);
						panelGestion.run(user);
						dispose();
					} else {
						JOptionPane.showMessageDialog(null, "Hubo un error al editar, por favor\nverifique los valores y vuelva a intentarlo.");
					}
				}
				
				
				
				
				
			}
		 });
		contentPane.add(btnEditar);
		
		JButton btnVolver = new JButton("Volver");
		btnVolver.setBounds(10, 348, 85, 21);
		btnVolver.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				GestionUsers panelGestion = new GestionUsers(user);
				panelGestion.run(user);
				dispose();
			}
		 });
		contentPane.add(btnVolver);
		
	}

}
