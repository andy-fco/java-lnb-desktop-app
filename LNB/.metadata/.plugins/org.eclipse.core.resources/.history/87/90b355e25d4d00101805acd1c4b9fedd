package GUI;

import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

import BLL.Admin;
import BLL.Aficionado;
import DLL.DLLAficionado;

import javax.swing.JLabel;
import javax.swing.JOptionPane;

import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JTextField;
import javax.swing.JButton;

public class EditarAficionado extends JFrame {

	private static final long serialVersionUID = 1L;
	private JPanel contentPane;
	private JTextField inpNombre;
	private JTextField inpApellido;
	private JTextField inpID;
	private JTextField inpPass;
	private JTextField inpMail;
	private JTextField inpDOB;
	private JButton btnEditar;
	private JButton btnVolver;

	/**
	 * Launch the application.
	 */
	
			public void run(Aficionado aficionado, Admin admin) {
				try {
					EditarAficionado frame = new EditarAficionado(aficionado, admin);
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		
	

	/**
	 * Create the frame.
	 */
	public EditarAficionado(Aficionado aficionado, Admin admin) {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 405, 526);
		setLocationRelativeTo(null);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));

		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		JLabel lblNewLabel = new JLabel("Editar Aficionado");
		lblNewLabel.setFont(new Font("Tahoma", Font.PLAIN, 32));
		lblNewLabel.setBounds(74, 30, 243, 39);
		contentPane.add(lblNewLabel);
		
		inpNombre = new JTextField();
		inpNombre.setBounds(47, 103, 306, 24);
		inpNombre.setText(aficionado.getNombre());
		contentPane.add(inpNombre);
		inpNombre.setColumns(10);
		
		JLabel lblNewLabel_1 = new JLabel("Nombre: ");
		lblNewLabel_1.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblNewLabel_1.setBounds(47, 79, 134, 24);
		contentPane.add(lblNewLabel_1);
		
		inpApellido = new JTextField();
		inpApellido.setColumns(10);
		inpApellido.setBounds(47, 155, 306, 24);
		inpApellido.setText(aficionado.getApellido());
		contentPane.add(inpApellido);
		
		JLabel lblApellido = new JLabel("Apellido:");
		lblApellido.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblApellido.setBounds(47, 131, 134, 24);
		contentPane.add(lblApellido);
		
		inpID = new JTextField();
		inpID.setColumns(10);
		inpID.setBounds(47, 210, 306, 24);
		inpID.setText(aficionado.getId());
		contentPane.add(inpID);
		
		JLabel lblID = new JLabel("ID: ");
		lblID.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblID.setBounds(47, 186, 134, 24);
		contentPane.add(lblID);
		
		inpPass = new JTextField();
		inpPass.setColumns(10);
		inpPass.setBounds(47, 264, 306, 24);
		inpPass.setText(aficionado.desencriptar(aficionado.getPass()));
		contentPane.add(inpPass);
		
		JLabel lblPass = new JLabel("Contraseña:");
		lblPass.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblPass.setBounds(47, 240, 134, 24);
		contentPane.add(lblPass);
		
		inpMail = new JTextField();
		inpMail.setColumns(10);
		inpMail.setBounds(47, 318, 306, 24);
		inpMail.setText(aficionado.getEmail());
		contentPane.add(inpMail);
		
		JLabel lblMail = new JLabel("Email:");
		lblMail.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblMail.setBounds(47, 294, 134, 24);
		contentPane.add(lblMail);
		
		inpDOB = new JTextField();
		inpDOB.setColumns(10);
		inpDOB.setBounds(47, 371, 306, 24);
		inpDOB.setText(aficionado.getdOfBirth());
		contentPane.add(inpDOB);
		
		JLabel lblDOB = new JLabel("Fecha de Nacimiento [YYYY-MM-DD]");
		lblDOB.setFont(new Font("Tahoma", Font.PLAIN, 16));
		lblDOB.setBounds(47, 347, 285, 24);
		contentPane.add(lblDOB);
		
		btnEditar = new JButton("Editar");
		btnEditar.setFont(new Font("Tahoma", Font.PLAIN, 18));
		btnEditar.setBounds(195, 405, 158, 32);
		btnEditar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
				Aficionado editado = new Aficionado(inpNombre.getText(),
						inpApellido.getText(),
						inpID.getText(),
						inpPass.getText(),
						inpMail.getText(),
						inpDOB.getText());
				
				if (DLLAficionado.editarAficionado(editado)) {
					JOptionPane.showMessageDialog(null, "Aficionado editado con éxito.");
					GestionUsers panelGestion = new GestionUsers(admin);
					panelGestion.run(admin);
					dispose();
				} else {
					JOptionPane.showMessageDialog(null, "Hubo un error al editar, por favor\nverifique los valores y vuelva a intentarlo.");
				}
				
			}
		 });
		contentPane.add(btnEditar);
		
		btnVolver = new JButton("Volver");
		btnVolver.setBounds(10, 458, 85, 21);
		btnVolver.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				GestionUsers panelGestion = new GestionUsers(admin);
				panelGestion.run(admin);
				dispose();
			}
		 });
		contentPane.add(btnVolver);
	}
}
