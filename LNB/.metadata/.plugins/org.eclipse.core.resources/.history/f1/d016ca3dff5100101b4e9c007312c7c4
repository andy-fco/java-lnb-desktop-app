package GUI;

import javax.swing.*;
import javax.swing.border.EmptyBorder;

import BLL.Aficionado;
import BLL.Equipo;
import BLL.Jugador;

import java.awt.*;
import java.util.ArrayList;
import java.util.Comparator;
import java.util.List;

public class VerPlantel extends JFrame {

	private static final long serialVersionUID = 1L;
	private JPanel contentPane;

	public void run(Aficionado user, Equipo equipo) {
		try {
			VerPlantel frame = new VerPlantel(user, equipo);
			frame.setVisible(true);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	public VerPlantel(Aficionado user, Equipo equipo) {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 731, 477);
		setLocationRelativeTo(null);

		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);

		JTabbedPane tabbedPane = new JTabbedPane(JTabbedPane.LEFT);
		tabbedPane.setBounds(10, 10, 707, 420);
		contentPane.add(tabbedPane);

		
		List<Jugador> jugadores = new ArrayList<>(equipo.getJugadores());
		jugadores.sort(Comparator.comparing(Jugador::getApellido));

		for (Jugador j : jugadores) {
			JPanel panelJugador = new JPanel();
			panelJugador.setLayout(null);

			JLabel lblNombre = new JLabel(j.getNombre() + " " + j.getApellido());
			lblNombre.setFont(new Font("Tahoma", Font.PLAIN, 28));
			lblNombre.setBounds(47, 10, 338, 32);
			panelJugador.add(lblNombre);

			JLabel lblMedia = new JLabel(String.valueOf(j.getMedia()));
			lblMedia.setFont(new Font("Tahoma", Font.PLAIN, 28));
			lblMedia.setBounds(10, 10, 63, 32);
			panelJugador.add(lblMedia);

			JLabel lblCamiseta = new JLabel("#" + j.getCamiseta());
			lblCamiseta.setFont(new Font("Tahoma", Font.PLAIN, 22));
			lblCamiseta.setBounds(55, 41, 63, 32);
			panelJugador.add(lblCamiseta);

			JLabel lblPosicion = new JLabel(j.getPosicion());
			lblPosicion.setFont(new Font("Tahoma", Font.PLAIN, 22));
			lblPosicion.setBounds(99, 41, 241, 32);
			panelJugador.add(lblPosicion);

			JLabel lblTiro = new JLabel("Tiro " + j.getTiro());
			lblTiro.setFont(new Font("Tahoma", Font.PLAIN, 22));
			lblTiro.setBounds(10, 95, 131, 32);
			panelJugador.add(lblTiro);

			JLabel lblVelocidad = new JLabel("Velocidad " + j.getVelocidad());
			lblVelocidad.setFont(new Font("Tahoma", Font.PLAIN, 22));
			lblVelocidad.setBounds(165, 95, 150, 32);
			panelJugador.add(lblVelocidad);

			JLabel lblDribling = new JLabel("Dribling " + j.getDribling());
			lblDribling.setFont(new Font("Tahoma", Font.PLAIN, 22));
			lblDribling.setBounds(10, 182, 131, 32);
			panelJugador.add(lblDribling);

			JLabel lblDefensa = new JLabel("Defensa " + j.getDefensa());
			lblDefensa.setFont(new Font("Tahoma", Font.PLAIN, 22));
			lblDefensa.setBounds(165, 182, 150, 32);
			panelJugador.add(lblDefensa);

			JLabel lblPase = new JLabel("Pase " + j.getPase());
			lblPase.setFont(new Font("Tahoma", Font.PLAIN, 22));
			lblPase.setBounds(10, 255, 131, 32);
			panelJugador.add(lblPase);

			JLabel lblSalto = new JLabel("Salto " + j.getSalto());
			lblSalto.setFont(new Font("Tahoma", Font.PLAIN, 22));
			lblSalto.setBounds(165, 255, 150, 32);
			panelJugador.add(lblSalto);

			JLabel lblManoHabil = new JLabel("Mano Hábil: " + j.getManoHabil());
			lblManoHabil.setFont(new Font("Tahoma", Font.PLAIN, 18));
			lblManoHabil.setBounds(322, 95, 304, 32);
			panelJugador.add(lblManoHabil);

			JLabel lblEspecialidad = new JLabel("Especialidad: " + j.getEspecialidad());
			lblEspecialidad.setFont(new Font("Tahoma", Font.PLAIN, 18));
			lblEspecialidad.setBounds(322, 141, 304, 32);
			panelJugador.add(lblEspecialidad);

			JLabel lblJugada = new JLabel("Jugada Característica: " + j.getJugada());
			lblJugada.setFont(new Font("Tahoma", Font.PLAIN, 18));
			lblJugada.setBounds(322, 185, 304, 32);
			panelJugador.add(lblJugada);

			JLabel lblAltura = new JLabel("Altura: " + j.getAltura() + " m");
			lblAltura.setFont(new Font("Tahoma", Font.PLAIN, 18));
			lblAltura.setBounds(322, 234, 241, 32);
			panelJugador.add(lblAltura);

			JLabel lblNacionalidad = new JLabel("Nacionalidad: " + j.getNacionalidad());
			lblNacionalidad.setFont(new Font("Tahoma", Font.PLAIN, 18));
			lblNacionalidad.setBounds(322, 276, 304, 32);
			panelJugador.add(lblNacionalidad);

			JLabel lblCiudad = new JLabel("Ciudad: " + j.getCiudad());
			lblCiudad.setFont(new Font("Tahoma", Font.PLAIN, 18));
			lblCiudad.setBounds(322, 318, 304, 32);
			panelJugador.add(lblCiudad);

			JLabel lblFechaDeNacimiento = new JLabel("Fecha de Nacimiento: " + j.getdOfBirth());
			lblFechaDeNacimiento.setFont(new Font("Tahoma", Font.PLAIN, 18));
			lblFechaDeNacimiento.setBounds(322, 360, 304, 32);
			panelJugador.add(lblFechaDeNacimiento);

			
			JProgressBar progressTiro = new JProgressBar();
			progressTiro.setBounds(10, 137, 146, 20);
			progressTiro.setValue(j.getTiro());
			panelJugador.add(progressTiro);

			JProgressBar progressVel = new JProgressBar();
			progressVel.setBounds(165, 137, 146, 20);
			progressVel.setValue(j.getVelocidad());
			panelJugador.add(progressVel);

			JProgressBar progressDri = new JProgressBar();
			progressDri.setBounds(10, 225, 146, 20);
			progressDri.setValue(j.getDribling());
			panelJugador.add(progressDri);

			JProgressBar progressDef = new JProgressBar();
			progressDef.setBounds(165, 225, 146, 20);
			progressDef.setValue(j.getDefensa());
			panelJugador.add(progressDef);

			JProgressBar progressPase = new JProgressBar();
			progressPase.setBounds(10, 297, 146, 20);
			progressPase.setValue(j.getPase());
			panelJugador.add(progressPase);

			JProgressBar progressSalto = new JProgressBar();
			progressSalto.setBounds(165, 296, 146, 20);
			progressSalto.setValue(j.getSalto());
			panelJugador.add(progressSalto);

			tabbedPane.addTab(j.getApellido(), panelJugador);
		}
	}
}
