package BLL;

import DLL.DLLAficionado;

public class Jugador extends Persona {

	private int camiseta;
	private int media;
	private String posicion;
	private String nacionalidad;
	private Equipo equipo;
	private int tiro;
	private int dribling;
	private int velocidad;
	private int pase;
	private int defensa;
	private int salto;
	private String dOfBirth;
	private String ciudad;
	private float altura;
	private String manoHabil;
	private String especialidad;
	private String jugada;
	private int aficionado;

	public Jugador(String nombre, String apellido, int camiseta, int media, String posicion, String nacionalidad,
			Equipo equipo, int tiro, int dribling, int velocidad, int pase, int defensa, int salto, String dOfBirth,
			String ciudad, float altura, String manoHabil, String especialidad, String jugada, int aficionado) {
		super(nombre, apellido);
		this.camiseta = camiseta;
		this.media = media;
		this.posicion = posicion;
		this.nacionalidad = nacionalidad;
		this.equipo = equipo;
		this.tiro = tiro;
		this.dribling = dribling;
		this.velocidad = velocidad;
		this.pase = pase;
		this.defensa = defensa;
		this.salto = salto;
		this.dOfBirth = dOfBirth;
		this.ciudad = ciudad;
		this.altura = altura;
		this.manoHabil = manoHabil;
		this.especialidad = especialidad;
		this.jugada = jugada;
		this.aficionado = aficionado;
	}

	public Jugador(String nombre, String apellido, int camiseta, int media, String posicion, String nacionalidad,
			Equipo equipo, int tiro, int dribling, int velocidad, int pase, int defensa, int salto, String dOfBirth,
			String ciudad, float altura, String manoHabil, String especialidad, String jugada) {
		super(nombre, apellido);
		this.camiseta = camiseta;
		this.media = media;
		this.posicion = posicion;
		this.nacionalidad = nacionalidad;
		this.equipo = equipo;
		this.tiro = tiro;
		this.dribling = dribling;
		this.velocidad = velocidad;
		this.pase = pase;
		this.defensa = defensa;
		this.salto = salto;
		this.dOfBirth = dOfBirth;
		this.ciudad = ciudad;
		this.altura = altura;
		this.manoHabil = manoHabil;
		this.especialidad = especialidad;
		this.jugada = jugada;
	}

	public int getCamiseta() {
		return camiseta;
	}

	public void setCamiseta(int camiseta) {
		this.camiseta = camiseta;
	}

	public int getMedia() {
		return media;
	}

	public void setMedia(int media) {
		this.media = media;
	}

	public String getPosicion() {
		return posicion;
	}

	public void setPosicion(String posicion) {
		this.posicion = posicion;
	}

	public String getNacionalidad() {
		return nacionalidad;
	}

	public void setNacionalidad(String nacionalidad) {
		this.nacionalidad = nacionalidad;
	}

	public Equipo getEquipo() {
		return equipo;
	}

	public void setEquipo(Equipo equipo) {
		this.equipo = equipo;
	}

	public int getTiro() {
		return tiro;
	}

	public void setTiro(int tiro) {
		this.tiro = tiro;
	}

	public int getDribling() {
		return dribling;
	}

	public void setDribling(int dribling) {
		this.dribling = dribling;
	}

	public int getVelocidad() {
		return velocidad;
	}

	public void setVelocidad(int velocidad) {
		this.velocidad = velocidad;
	}

	public int getPase() {
		return pase;
	}

	public void setPase(int pase) {
		this.pase = pase;
	}

	public int getDefensa() {
		return defensa;
	}

	public void setDefensa(int defensa) {
		this.defensa = defensa;
	}

	public int getSalto() {
		return salto;
	}

	public void setSalto(int salto) {
		this.salto = salto;
	}

	public String getdOfBirth() {
		return dOfBirth;
	}

	public void setdOfBirth(String dOfBirth) {
		this.dOfBirth = dOfBirth;
	}

	public String getCiudad() {
		return ciudad;
	}

	public void setCiudad(String ciudad) {
		this.ciudad = ciudad;
	}

	public float getAltura() {
		return altura;
	}

	public void setAltura(float altura) {
		this.altura = altura;
	}

	public String getManoHabil() {
		return manoHabil;
	}

	public void setManoHabil(String manoHabil) {
		this.manoHabil = manoHabil;
	}

	public String getEspecialidad() {
		return especialidad;
	}

	public void setEspecialidad(String especialidad) {
		this.especialidad = especialidad;
	}

	public String getJugada() {
		return jugada;
	}

	public void setJugada(String jugada) {
		this.jugada = jugada;
	}

	public int getAficionado() {
		return camiseta;
	}

	public void setAficionado(int aficionado) {
		this.aficionado = aficionado;
	}

	// OTROS MÉTODOS
	// CREAR JUGADOR DE USUARIO
	public static boolean crearJugadorDeAficionado(Aficionado user, int camiseta, String posicion, String nacionalidad,
			String ciudad, float altura, String mano, String especialidad, String jugada) {
		boolean flag = false;
		int aficionado = DLLAficionado.buscarIdAficionado(user);


		return flag;
	}
	
	//NIVELAR ESTADÍSTICAS
	public static int nivelarTiro(String posicion, String especialidad, String jugada) {
		int tiro = 62;
		if (posicion.equalsIgnoreCase("Escolta")||posicion.equalsIgnoreCase("Ala-Pivot")) {
			tiro += 1;
		}
		
		if (especialidad.equalsIgnoreCase("Tiro")) {
			tiro += 3;
		}
		
		if (
			    jugada.equalsIgnoreCase("Salida de tirador") ||
			    jugada.equalsIgnoreCase("Triple") ||
			    jugada.equalsIgnoreCase("Pick and pop") ||
			    jugada.equalsIgnoreCase("Tiro de media distancia") ||
			    jugada.equalsIgnoreCase("Fadeaway") ||
			    jugada.equalsIgnoreCase("Flotadora")
			) {
			    tiro += 2;
			}	
	}
	
	public static int nivelarDribling(String posicion, String especialidad, String jugada) {
	    int dribling = 62;

	    if (posicion.equalsIgnoreCase("Base") || posicion.equalsIgnoreCase("Escolta")) {
	        dribling += 2;
	    }

	    if (especialidad.equalsIgnoreCase("Uno contra uno") || especialidad.equalsIgnoreCase("Pick and roll") && posicion.equalsIgnoreCase("Base") || posicion.equalsIgnoreCase("Escolta")) {
	        dribling += 3;
	    }

	    if (jugada.equalsIgnoreCase("Crossover") || jugada.equalsIgnoreCase("No-look pass")) {
	        dribling += 2;
	    }

	    return dribling;
	}
	
	public static int nivelarPase(String posicion, String especialidad, String jugada) {
	    int pase = 62;

	    if (posicion.equalsIgnoreCase("Base")) {
	        pase += 3;
	    }

	    if (especialidad.equalsIgnoreCase("Asistencias")) {
	        pase += 2;
	    }

	    if (jugada.equalsIgnoreCase("Pick and roll") || jugada.equalsIgnoreCase("No-look pass")) {
	        pase += 2;
	    }

	    return pase;
	}
	
	public static int nivelarVelocidad(String posicion, String especialidad, String jugada) {
	    int velocidad = 62;

	    if (posicion.equalsIgnoreCase("Base") || posicion.equalsIgnoreCase("Alero")) {
	        velocidad += 2;
	    }

	    if (especialidad.equalsIgnoreCase("Robos") || especialidad.equalsIgnoreCase("Uno contra uno")) {
	        velocidad += 2;
	    }

	    if (jugada.equalsIgnoreCase("Volcada en transición") || jugada.equalsIgnoreCase("Crossover")) {
	        velocidad += 2;
	    }

	    return velocidad;
	}
	
	public static int nivelarDefensa(String posicion, String especialidad, String jugada) {
	    int defensa = 62;

	    if (posicion.equalsIgnoreCase("Ala-Pivot") || posicion.equalsIgnoreCase("Pivot")) {
	        defensa += 2;
	    }

	    if (especialidad.equalsIgnoreCase("Defensa") || especialidad.equalsIgnoreCase("Tapas")) {
	        defensa += 3;
	    }

	    return defensa;
	}
	
	public static int nivelarSalto(String posicion, String especialidad, String jugada) {
	    int salto = 62;

	    if (posicion.equalsIgnoreCase("Alero") || posicion.equalsIgnoreCase("Pivot")) {
	        salto += 2;
	    }

	    if (especialidad.equalsIgnoreCase("Rebotes") || especialidad.equalsIgnoreCase("Volcadas")|| especialidad.equalsIgnoreCase("Tapas")) {
	        salto += 3;
	    }

	    if (jugada.equalsIgnoreCase("Volcada") || jugada.equalsIgnoreCase("Volcada en transición")) {
	        salto += 2;
	    }

	    return salto;
	}
	

	@Override
	public String toString() {
		return "Jugador [media=" + media + ", posicion=" + posicion + ", nacionalidad=" + nacionalidad + ", equipo="
				+ equipo + ", tiro=" + tiro + ", dribling=" + dribling + ", velocidad=" + velocidad + ", pase=" + pase
				+ ", defensa=" + defensa + ", salto=" + salto + ", dOfBirth=" + dOfBirth + ", ciudad=" + ciudad
				+ ", altura=" + altura + ", manoHabil=" + manoHabil + ", especialidad=" + especialidad + ", jugada="
				+ jugada + "]";
	}

}
