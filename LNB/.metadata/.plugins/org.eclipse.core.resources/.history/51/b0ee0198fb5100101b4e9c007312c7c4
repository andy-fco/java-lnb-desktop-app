package GUI;

 

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;

import BLL.Aficionado;
import BLL.Equipo;

import javax.swing.JButton;
import javax.swing.JLabel;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.Color;

public class VerEquipo extends JFrame {

	private static final long serialVersionUID = 1L;
	private JPanel contentPane;

	/**
	 * Launch the application.
	 */
 
			public void run(Aficionado user, Equipo equipo) {
				try {
					VerEquipo frame = new VerEquipo(user, equipo);
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
 

	/**
	 * Create the frame.
	 */
	public VerEquipo(Aficionado user, Equipo equipo) {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 731, 464);
		contentPane = new JPanel();
		setLocationRelativeTo(null);
		getContentPane().setLayout(null);
		
		JButton btnVolver = new JButton("Volver");
		btnVolver.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				Equipos frame = new Equipos(user);
				frame.run(user);
				dispose();
			}
		});
		btnVolver.setBounds(10, 10, 85, 21);
		getContentPane().add(btnVolver);
		
		JLabel lblNombre = new JLabel("<html><h1>"+equipo.getNombre()+"</h1></html>");
		lblNombre.setFont(new Font("Tahoma", Font.PLAIN, 30));
		lblNombre.setBounds(10, 41, 335, 53);
		getContentPane().add(lblNombre);
		
		JLabel lblCiudad = new JLabel("<html><h2>"+equipo.getCiudad()+"</h2></html>");
		lblCiudad.setForeground(Color.GRAY);
		lblCiudad.setBounds(10, 97, 268, 36);
		getContentPane().add(lblCiudad);
		
		JLabel lblEstadio = new JLabel("Estadio: "+equipo.getEstadio());
		lblEstadio.setFont(new Font("Tahoma", Font.PLAIN, 18));
		lblEstadio.setBounds(10, 159, 252, 36);
		getContentPane().add(lblEstadio);
		
		JLabel lblFundacion = new JLabel("Fundación: "+equipo.getFechaDeFundacion());
		lblFundacion.setFont(new Font("Tahoma", Font.PLAIN, 18));
		lblFundacion.setBounds(10, 202, 252, 36);
		getContentPane().add(lblFundacion);
		
		JLabel lblTemporadas = new JLabel("Temporadas: "+equipo.getTemporadasEnLiga());
		lblTemporadas.setFont(new Font("Tahoma", Font.PLAIN, 18));
		lblTemporadas.setBounds(10, 248, 252, 36);
		getContentPane().add(lblTemporadas);
		
		JLabel lblCampeonatos = new JLabel("Campeonatos: "+equipo.getCampeonatos());
		lblCampeonatos.setFont(new Font("Tahoma", Font.PLAIN, 18));
		lblCampeonatos.setBounds(10, 294, 252, 36);
		getContentPane().add(lblCampeonatos);
		
		JLabel lblDT = new JLabel("Director Técnico: ");
		if (equipo.getDt() != null) {
			lblDT.setText("Director Técnico: "+equipo.getDt().getNombre()+" "+equipo.getDt().getApellido());
		}
		lblDT.setFont(new Font("Tahoma", Font.PLAIN, 18));
		lblDT.setBounds(10, 340, 335, 36);
		getContentPane().add(lblDT);
		
		JButton btnJugadores = new JButton("Ver jugadores");
		btnJugadores.setFont(new Font("Tahoma", Font.PLAIN, 16));
		btnJugadores.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				Equipos frame = new Equipos(user);
				frame.run(user);
				dispose();
			}
		});
		btnJugadores.setBounds(10, 386, 162, 36);
		getContentPane().add(btnJugadores);
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
	}
	
	

}
